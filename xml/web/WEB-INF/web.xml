<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>资源库的WebDAV</display-name>
	<description>资源库的WebDAV</description>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/app-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>parentContextJndiName</param-name>
		<param-value>java:comp/env/coolink/root</param-value>
	</context-param>
	<listener>
		<listener-class>com.fulong.longcon.context.JndiContextLoaderListener</listener-class>
	</listener>
	<filter>
		<filter-name>encoding</filter-name>
		<display-name>编码过滤器</display-name>
		<description>如果请求页面没有设置编码，则采用这个过滤器缺省设置</description>
		<filter-class>com.fulong.common.servlet.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<servlet-name>ContentDAV</servlet-name>
	</filter-mapping>
	<servlet>
		<description>内容库的WebDAV</description>
		<display-name>ContentDAV</display-name>
		<servlet-name>ContentDAV</servlet-name>
		<servlet-class>com.fulong.webdav.server.ContentWebDavServlet</servlet-class>
		<init-param>
			<param-name>listings</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>1000</param-value>
		</init-param>
		<init-param>
			<param-name>readonly</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ContentDAV</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>
