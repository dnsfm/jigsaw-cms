<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>Longcon WebManager 3.0</display-name>
  <filter>
    <filter-name>encoding</filter-name>
    <display-name>编码过滤器</display-name>
    <description>如果请求页面没有设置编码，则采用这个过滤器缺省设置</description>
    <filter-class>com.fulong.common.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>FileFilter</filter-name>
    <display-name>文件过滤器</display-name>
    <description>对特定目录下的文件禁止执行</description>
    <filter-class>com.fulong.common.servlet.FileFilter</filter-class>
    <init-param>
      <param-name>patterns</param-name>
      <param-value>/**/*.jsp;/**/*.jspx</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>PortalFilter</filter-name>
    <display-name>门户引擎</display-name>
    <description>门户引擎</description>
    <filter-class>com.fulong.portal.servlet.PortalFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>patterns</param-name>
      <param-value>/**/*.jsp;/**/*.jspf;/**/*.bak</param-value>
    </init-param>
    <init-param>
      <param-name>portlet-configs</param-name>
      <param-value>/WEB-INF/portlets.xml</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>DelegatingFilterProxy</filter-name>
    <display-name>Springframe Acegi过滤器</display-name>
    <description>Springframe Acegi用的安全权限检查过滤器</description>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    <init-param>
      <param-name>targetBeanName</param-name>
      <param-value>filterChainProxy</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FileFilter</filter-name>
    <url-pattern>/resource/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>FileFilter</filter-name>
    <url-pattern>/attachments/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>jsp</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>action</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>workflow</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>WebDAV</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>ContentDAV</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <servlet-name>DBWebDAV</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PortalFilter</filter-name>
    <url-pattern>/sites/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>*.bak</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>*.jspf</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>*.wdo</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>/passport/j_spring_security_check</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>DelegatingFilterProxy</filter-name>
    <url-pattern>/passport/j_spring_security_logout</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.fulong.common.servlet.SpringActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/common</param-name>
      <param-value>/WEB-INF/common/struts-config.xml,/WEB-INF/cms/portlets-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site</param-name>
      <param-value>/WEB-INF/site/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/editor</param-name>
      <param-value>/WEB-INF/site/editor-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/template</param-name>
      <param-value>/WEB-INF/site/template-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/resource</param-name>
      <param-value>/WEB-INF/site/resource-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/css</param-name>
      <param-value>/WEB-INF/site/css-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/script</param-name>
      <param-value>/WEB-INF/site/script-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/management</param-name>
      <param-value>/WEB-INF/site/management-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/site/stat</param-name>
      <param-value>/WEB-INF/site/stat-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/passport</param-name>
      <param-value>/WEB-INF/passport/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms</param-name>
      <param-value>/WEB-INF/cms/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/content</param-name>
      <param-value>/WEB-INF/cms/content-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/dialog</param-name>
      <param-value>/WEB-INF/cms/dialog-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/definition</param-name>
      <param-value>/WEB-INF/cms/definition-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/resource</param-name>
      <param-value>/WEB-INF/cms/resource-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/category</param-name>
      <param-value>/WEB-INF/cms/category-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/share</param-name>
      <param-value>/WEB-INF/cms/share-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/harvest</param-name>
      <param-value>/WEB-INF/cms/harvest-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>config/cms/dict</param-name>
      <param-value>/WEB-INF/cms/dict-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>dll.jacob.32</param-name>
      <param-value>/WEB-INF/jacob-1.14.3-x86.dll</param-value>
    </init-param>
    <init-param>
      <param-name>dll.jacob.64</param-name>
      <param-value>/WEB-INF/jacob-1.14.3-x64.dll</param-value>
    </init-param>
    <init-param>
      <param-name>set-proxy</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>WebDAV</servlet-name>
    <display-name>WebDAV</display-name>
    <description>文件系统的WebDAV</description>
    <servlet-class>com.fulong.webdav.FileDavServlet</servlet-class>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>1000</param-value>
    </init-param>
    <init-param>
      <param-name>readonly</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>DBWebDAV</servlet-name>
    <display-name>从资源库中获取文件的WebDAV</display-name>
    <description>从资源库中获取文件的WebDAV</description>
    <servlet-class>com.fulong.webdav.DBResourceDavServlet</servlet-class>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>1000</param-value>
    </init-param>
    <init-param>
      <param-name>readonly</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>ContentDAV</servlet-name>
    <display-name>ContentDAV</display-name>
    <description>内容库的WebDAV</description>
    <servlet-class>com.fulong.webdav.ContentWebDavServlet</servlet-class>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>1000</param-value>
    </init-param>
    <init-param>
      <param-name>readonly</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>workflow</servlet-name>
    <servlet-class>com.fulong.longcon.workflow.impl.WorkflowServlet</servlet-class>
    <init-param>
      <param-name>rulesets</param-name>
      <param-value>com.fulong.longcon.workflow.impl.WorkflowRuleSet</param-value>
    </init-param>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/workflow-config.xml</param-value>
    </init-param>
    <load-on-startup>8</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>workflow</servlet-name>
    <url-pattern>*.wdo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>*.jspf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>*.bak</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WebDAV</servlet-name>
    <url-pattern>/webdav/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DBWebDAV</servlet-name>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContentDAV</servlet-name>
    <url-pattern>/xml/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.do</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
