<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">
	<display-name>缺省网站模板</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/app-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>parentContextJndiName</param-name>
		<param-value>java:comp/env/coolink/root</param-value>
	</context-param>
	<context-param>
		<param-name>coolinkTemplate</param-name>
		<param-value>true</param-value>
	</context-param>
	<listener>
		<listener-class>com.fulong.longcon.context.JndiContextLoaderListener</listener-class>
	</listener>
	<filter>
		<description>如果请求页面没有设置编码，则采用这个过滤器缺省设置</description>
		<display-name>编码过滤器</display-name>
		<filter-name>encoding</filter-name>
		<filter-class>com.fulong.common.servlet.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<description>门户引擎</description>
		<display-name>门户引擎</display-name>
		<filter-name>PortalFilter</filter-name>
		<filter-class>com.fulong.portal.servlet.PortalFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>patterns</param-name>
			<param-value>/**/*.jsp;/**/*.jspf;/**/*.bak;</param-value>
		</init-param>
		<init-param>
			<param-name>portlet-configs</param-name>
			<param-value>/WEB-INF/portlets.xml</param-value>
		</init-param>
	</filter>
	<filter>
		<description>Springframe Acegi用的安全权限检查过滤器</description>
		<display-name>Springframe Acegi过滤器</display-name>
		<filter-name>DelegatingFilterProxy</filter-name>

		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>filterChainProxy</param-value>
		</init-param>
	</filter>
	<filter>
        <description>rss过滤器</description>
        <display-name>rss过滤器</display-name>
        <filter-name>RssFilter</filter-name>
        <filter-class>com.fulong.portal.servlet.RssFilter</filter-class>
    </filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
        <filter-name>RssFilter</filter-name>
        <url-pattern>*.rss</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RssFilter</filter-name>
        <url-pattern>*.bak</url-pattern>
    </filter-mapping>
	<filter-mapping>
		<filter-name>PortalFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PortalFilter</filter-name>
		<url-pattern>*.bak</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PortalFilter</filter-name>
		<url-pattern>*.jspf</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DelegatingFilterProxy</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DelegatingFilterProxy</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DelegatingFilterProxy</filter-name>
		<url-pattern>*.bak</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DelegatingFilterProxy</filter-name>
		<url-pattern>*.jspf</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DelegatingFilterProxy</filter-name>
		<url-pattern>/security/*</url-pattern>
	</filter-mapping>

	<servlet>
		<description>文件系统的WebDAV</description>
		<display-name>WebDAV</display-name>
		<servlet-name>WebDAV</servlet-name>
		<servlet-class>com.fulong.webdav.server.FileDavServlet</servlet-class>
		<init-param>
			<param-name>listings</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>1000</param-value>
		</init-param>
		<init-param>
			<param-name>readonly</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.fulong.common.servlet.SpringActionServlet</servlet-class>
    <init-param>
      <param-name>config/clip</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
	<servlet-mapping>
	    <servlet-name>action</servlet-name>
	    <url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp</servlet-name>
		<url-pattern>*.jspf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jsp</servlet-name>
		<url-pattern>*.bak</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


</web-app>
