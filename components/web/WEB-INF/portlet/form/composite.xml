<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
   <form-beans>
     <form-bean name="configForm" type="com.fulong.portlet.PortletPreferencesForm"/>
  </form-beans>
  <action-mappings>
    <action name="configForm" path="/save" type="com.fulong.portlet.component.node.composite.SaveAction"/>
    <action  name="configForm"  path="/edit" type="com.fulong.portlet.component.node.composite.EditRender">
      <forward name="success" path="/portlet/form/component/node/composite/edit.jsp"/>
      <forward name="noForm" path="/portlet/form/noForm.jsp"/>
    </action>
    <action path="/view" type="com.fulong.portlet.component.node.composite.ViewRender">
      <forward name="success" path="/portlet/form/component/node/composite/view.jsp"/>
      <forward name="no.content" path="/portlet/form/component/node/composite/no.content.jsp"/>
    </action>
    <action path="/final" type="com.fulong.portlet.component.node.composite.FinalRender">
      <forward name="success" path="/portlet/form/component/node/composite/final.jsp"/>
    </action>
  </action-mappings>
</struts-config>
