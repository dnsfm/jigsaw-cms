<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
   <form-beans>
	<form-bean name="configForm" type="com.fulong.portlet.PortletPreferencesForm"/>
  </form-beans>
  <action-mappings>
    <action name="configForm" path="/save" type="com.fulong.portlet.button.sort.shift.SaveAction"/>
    <action  name="configForm"  path="/edit" type="com.fulong.portlet.button.sort.shift.EditRender">
      <forward name="success" path="/portlet/form/button/sort/shift/edit.jsp"/>
    </action>
    <action path="/view" type="com.fulong.portlet.button.sort.shift.ViewRender">
      <forward name="success" path="/portlet/form/button/sort/shift/view.jsp"/>
    </action>
    <action path="/final" type="com.fulong.portlet.button.sort.shift.FinalRender">
      <forward name="success" path="/portlet/form/button/sort/shift/final.jsp"/>
    </action>
  </action-mappings>
</struts-config>
