<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                       portlet.xsd">
	<portlet>
		<description xml:lang="zh">单行向左滚动特效用于向左滚动播放表格重复器中的内容。每次滚动一列。</description>
		<portlet-name>singleLeft</portlet-name>
		<display-name xml:lang="zh">单行向左滚动特效</display-name>
		<portlet-class>com.fulong.portlet.effects.EffectsPortlet</portlet-class>
	<init-param>
			<name>config-file</name>
			<value>/WEB-INF/portlet/effects/singleLeft.xml</value>
		</init-param>

		<expiration-cache>-1</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<resource-bundle>com.fulong.portlet.effects.singleLeft.Resource</resource-bundle>
		<portlet-preferences>
			<preference>
				<name>component</name>
                <description>搭配占位符</description>
			</preference>
			<preference>
				<name>speed</name>
				<value>2</value>
                <description>滚动速度</description>
			</preference>
			<preference>
				<name>height</name>
				<value>20</value>
                <description>滚屏高度</description>
			</preference>
			<preference>
				<name>width</name>
				<value>200</value>
                <description>滚屏宽度</description>
			</preference>
		</portlet-preferences>
	</portlet>
</portlet-app>
